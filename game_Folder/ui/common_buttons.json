{
  "namespace": "common_buttons",

  // 1. TEXTURE-BASED BUTTON (Stable Static Implementation)
  "simple_button@common.button": {
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "default_state": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ]
        }
      },
      {
        "hover_state": {
          "type": "image",
          "texture": "textures/gui/client/btn_hover",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "$visible": "$button_state == 'hover'"
        }
      },
      {
        "border": {
          "type": "image",
          "texture": "textures/gui/client/btn_border",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "layer": 1
        }
      },
      {
        "text_label": {
          "type": "label",
          "text": "$button_text",
          "font_type": "smooth",
          "shadow": true,
          "color": [ 1, 1, 1, 1 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2
        }
      }
    ]
  },

  // 2. LEGACY COMPATIBILITY - Maps to simple_button
  "client_button_panel": {
    "type": "image",
    "texture": "textures/gui/client/btn_default",
    "nineslice_size": 4.0,
    "size": [ "100%", "100%" ]
  },

  "light_text_button@common.button": {
    "size": [ "100%", "100%" ],
    "controls": [
      { "bg@common_buttons.simple_button": {} }
    ]
  }
}