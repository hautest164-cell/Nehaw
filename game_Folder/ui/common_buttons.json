{
  "namespace": "common_buttons",

  // 1. TEXTURE-BASED BUTTON (Stable Static Implementation)
  "simple_button@common.button": {
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "default_state": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0.0, 0.05, 0.15, 0.3 ],
          "size": [ "100%", "100%" ]
        }
      },
      {
        "border": {
          "type": "image",
          "texture": "textures/ui/focus_border_white",
          "color": [ 0.4, 0.6, 1.0, 0.7 ],
          "size": [ "100%", "100%" ]
        }
      },
      {
        "text_label": {
          "type": "label",
          "text": "$button_text",
          "font_type": "smooth",
          "shadow": true,
          "color": [ 1, 1, 1, 1 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "z_order": 2
        }
      }
    ]
  },

  // 2. LEGACY COMPATIBILITY - Maps to simple_button
  "client_button_panel": {
    "type": "image",
    "texture": "textures/ui/white",
    "color": [ 0.0, 0.05, 0.15, 0.3 ],
    "size": [ "100%", "100%" ]
  },

  "light_text_button@common.button": {
    "size": [ "100%", "100%" ],
    "controls": [
      { "bg@common_buttons.simple_button": {} }
    ]
  }
}