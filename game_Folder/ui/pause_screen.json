{
  "namespace": "pause",

  "pause_screen@common.base_screen": {
    "$screen_bg_content": "pause.pause_background",
    "$screen_content": "pause.pause_screen_content"
  },

  "pause_background": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "black_tint": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0, 0, 0, 0.4 ],
          "size": [ "100%", "100%" ]
        }
      }
    ]
  },

  "pause_screen_content": {
    "type": "panel",
    "controls": [
      {
        "button_stack": {
          "type": "stack_panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ 200, "100%c" ],
          "controls": [
            { "resume@common_buttons.light_text_button": { "$button_text": "menu.resume", "$pressed_button_name": "button.menu_continue" } },
            { "spacer1": { "type": "panel", "size": [ 0, 4 ] } },
            { "settings@common_buttons.light_text_button": { "$button_text": "menu.settings", "$pressed_button_name": "button.menu_settings" } },
            { "spacer2": { "type": "panel", "size": [ 0, 4 ] } },
            { "quit@common_buttons.light_text_button": { "$button_text": "menu.quit", "$pressed_button_name": "button.menu_quit" } }
          ]
        }
      }
    ]
  }
}
