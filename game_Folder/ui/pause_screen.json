{
  "namespace": "pause",

  "pause_screen@common.base_screen": {
    "$screen_bg_content": "pause.transparent_bg",
    "$screen_content": "pause.pause_screen_content"
  },

  "transparent_bg": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "overlay": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0, 0, 0, 0.4 ],
          "size": [ "100%", "100%" ]
        }
      }
    ]
  },

  "pause_screen_content": {
    "type": "panel",
    "controls": [
      {
        "stack": {
          "type": "stack_panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ 200, "100%c" ],
          "controls": [
            { "res@pause.client_btn": { "$btn_txt": "menu.resume", "$btn_event": "button.menu_continue" } },
            { "set@pause.client_btn": { "$btn_txt": "menu.settings", "$btn_event": "button.menu_settings" } },
            { "quit@pause.client_btn": { "$btn_txt": "menu.quit", "$btn_event": "button.menu_quit" } }
          ]
        }
      }
    ]
  },

  "client_btn": {
    "type": "panel",
    "size": [ "100%", 32 ],
    "controls": [
      {
        "main_button@common.button": {
          "size": [ "100%", "100%" ],
          "$pressed_button_name": "$btn_event",
          "controls": [
            {
              "default": {
                "type": "image",
                "texture": "textures/ui/white",
                "color": [ 0.0, 0.05, 0.15, 0.6 ],
                "size": [ "100%", "100%" ],
                "controls": [ { "label@pause.btn_label": {} } ]
              }
            },
            {
              "hover": {
                "type": "image",
                "texture": "textures/ui/white",
                "color": [ 0.1, 0.2, 0.4, 0.8 ],
                "size": [ "100%", "100%" ],
                "controls": [ { "label@pause.btn_label": {} } ]
              }
            }
          ]
        }
      }
    ]
  },

  "btn_label": {
    "type": "label",
    "text": "$btn_txt",
    "color": [ 1, 1, 1 ],
    "shadow": true,
    "layer": 5
  }
}