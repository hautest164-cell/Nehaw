{
  "namespace": "chat",

  "chat_transparent_overlay": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "tint": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0, 0, 0, 0.4 ],
          "size": [ "100%", "100%" ]
        }
      }
    ]
  },

  "chat_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ]
  },

  "chat_root": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "layer": 5,
    "controls": [
      { "chat_panel@chat.chat_panel": {} }
    ]
  },

  "chat_screen@common.base_screen": {
    "$screen_bg_content": "chat.chat_transparent_overlay",
    "$screen_content": "chat.chat_screen_content"
  },

  "chat_screen_content": {
    "type": "panel",
    "controls": [
      {
        "main_client_panel": {
          "type": "panel",
          "size": [ "100%", "100%" ],
          "controls": [
            { "border": { "type": "image", "texture": "textures/ui/focus_border_white", "color": [ 0.4, 0.6, 1.0, 0.3 ], "size": [ "100%", "100%" ] } },
            { "bg": { "type": "image", "texture": "textures/ui/white", "color": [ 0, 0, 0, 0.4 ], "size": [ "100%", "100%" ] } },
            { "chat_panel_layer@chat.chat_root": {} }
          ]
        }
      }
    ]
  }
}