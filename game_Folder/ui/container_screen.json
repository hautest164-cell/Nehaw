{
  "namespace": "container",

  "client_container_bg": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "border": {
          "type": "image",
          "texture": "textures/ui/focus_border_white",
          "color": [ 0.4, 0.6, 1.0, 0.6 ], // Thin blue border
          "size": [ "100%", "100%" ],
          "layer": 2
        }
      },
      {
        "main_bg": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0.0, 0.05, 0.1, 0.7 ], 
          "size": [ "100% - 2px", "100% - 2px" ],
          "layer": 1
        }
      }
    ]
  },

  "inventory_screen@common.base_screen": {
    "$screen_bg_content": "container.client_container_bg",
    "$screen_content": "inventory_common.inventory_panel"
  },

  "chest_screen@common.base_screen": {
    "$screen_bg_content": "container.client_container_bg",
    "$screen_content": "chest_common.chest_panel"
  }
}