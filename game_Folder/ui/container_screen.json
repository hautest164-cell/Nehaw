{
  "namespace": "container",

  "bg_no_safezone_screen_panel": {
    "type": "panel",
    "controls": [
      { "bg@container.client_container_bg": {} }
    ]
  },

  "inventory_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "bg@container.client_container_bg": {}
      }
    ]
  },

  "chest_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "bg@container.client_container_bg": {}
      }
    ]
  },

  "container_transparent_overlay": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "tint": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0, 0, 0, 0.3 ],
          "size": [ "100%", "100%" ]
        }
      }
    ]
  },

  "client_container_bg": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "border": {
          "type": "image",
          "texture": "textures/ui/focus_border_white",
          "color": [ 0.4, 0.6, 1.0, 0.3 ],
          "size": [ "100%", "100%" ],
          "layer": 2
        }
      },
      {
        "main_bg": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0.0, 0.05, 0.1, 0.3 ], 
          "size": [ "100%", "100%" ],
          "layer": 1
        }
      }
    ]
  },

  "inventory_screen@common.base_screen": {
    "$screen_bg_content": "container.container_transparent_overlay",
    "$screen_content": "container.inventory_panel"
  },

  "chest_screen@common.base_screen": {
    "$screen_bg_content": "container.container_transparent_overlay",
    "$screen_content": "container.chest_panel"
  }
}