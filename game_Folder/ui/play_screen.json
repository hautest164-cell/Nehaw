{
  "namespace": "play",

  "play_transparent_overlay": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "tint": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0, 0, 0, 0.3 ],
          "size": [ "100%", "100%" ],
          "layer": 1
        }
      }
    ]
  },

  "play_screen@common.base_screen": {
    "$screen_bg_content": "play.play_transparent_overlay", 
    "$screen_content": "play.play_screen_content"
  },

  "play_screen_content": {
    "type": "panel",
    "size": [ "100%", "100%" ]
  }
}