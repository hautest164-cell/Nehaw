{
  "namespace": "create_world",

  "bg_no_safezone_screen_panel": {
    "type": "panel",
    "controls": [
      { "bg@create_world.create_world_transparent_overlay": {} }
    ]
  },

  "create_world_transparent_overlay": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "tint": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": [ 0, 0, 0, 0.3 ],
          "size": [ "100%", "100%" ]
        }
      }
    ]
  },

  "create_world_common": {
    "create_world_panel": {
      "type": "panel",
      "size": [ "100%", "100%" ]
    }
  },

  "create_world_screen@common.base_screen": {
    "$screen_bg_content": "create_world.create_world_transparent_overlay",
    "$screen_content": "create_world.create_world_common.create_world_panel"
  }
}